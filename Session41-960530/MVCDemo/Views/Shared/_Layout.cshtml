@using MVCDemo.Services
@using MVCDemo.Models
@{ 
    var user = SecurityService.GetCurrentUser() as User;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>وبسایت دانشجویان :: @ViewBag.Title</title>

    <link href="~/Content/bootstrap-rtl.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme-rtl.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    @RenderSection("Styles",false)
</head>
<body>
    <nav class="navbar navbar-default container" style="margin-top:15px;">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">کهکشان</a>
            </div>
            <ul class="nav navbar-nav">
                <li>
                    <a href="#">
                        <!--<span class="glyphicon glyphicon-home"></span>-->
                        <span class="fa fa-home"></span>
                    </a>
                </li>
                <li><a href="/Students">مدیریت دانشجویان</a></li>
                <li><a href="@Url.Action("Index", "Courses")">دوره ها</a></li>
                <li><a href="@Url.Action("SubmitAssignment", "Students")">ثبت تکلیف</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-left">
                <li>
                    <a href="@Url.Action("Login", "Security")">
                        @(user?.Username ?? "لطفا وارد سایت شوید")
                        <span class="fa fa-user-circle-o"></span>
                    </a>
                </li>
                @if (user != null)
                {
                <li>
                    <a href="@Url.Action("Logout", "Security")">
                        <span class="glyphicon glyphicon-log-out"></span>
                    </a>
                </li>
                }
            </ul>
        </div>
    </nav>


    <div class="container" style="margin-top:50px;min-height:500px;">
        <div class="row">
            <aside class="col-md-2">

            </aside>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>

    </div>
    <footer class="container-fluid">
        <div class="" style="min-height:200px;">

        </div>
        <div class="copyright">
            تمامی حقوق متعلق است به همه!
        </div>
    </footer>

    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/bootstrap-rtl.js"></script>
    
    @RenderSection("Scripts", false)
</body>
</html>
